<!--- TEMPLATE FOR BLOG POST --->
{{!< default}}

<div class="container">
	
	<!-- HEADER COLUMN --->	
	<div class="header-col">
		<header>
			{{> header }}	
		</header>
	</div>	
	
	
	<!--- MAIN COLUMN --->
	<div class="main-col">
		<main>
			<div class="post-entry">
				<!--- POST CONTENT --->
				{{#post}}
					{{#contentFor "meta"}}
            			<meta property="og:type" content="article" />
            			<meta property="og:url" content="{{url absolute="true"}}" />
            			<meta property="og:title" content="{{title}} - BetzabÃ© Vancini" />
            			<meta property="og:site_name" content="{{@blog.title}}" />
            			<meta property="og:description" content="{{excerpt characters="220"}}..."/>
            			<meta property="og:image" content="{{@blog.url}}{{image}}" />
            			<meta property="article:author" content="https://facebook.com/betzabe.vancini" />
            			<meta property="article:published_time" content="{{date format="YYYY-MM-DD"}}" />{{#foreach tags}}
            			<meta property="article:tag" content="{{name}}" />{{/foreach}}
            			<meta property="fb:profile_id" content="betzabe.vancini" />
            			<meta property="fb:admins" content="mikenieva" />
        			{{/contentFor}}
				<article role="article" itemscope itemtype="http://schema.org/Article" class="postlistArticle">
					<h1 class="post-title">{{title}}</h1>
					<br>
					<time datetime="{{date format="YYYY MMM DD"}}" itemprop="datePublished">
						<span class="datetime-full">{{date format="DD.MM.YYYY"}}</span>
					</time>
					<!--- Sharing Section --->
						{{> share }}
					<div class="hrule"></div>
					<div class="postContent">
						{{content}} 
					</div>
					<!--- Sharing Section --->
						{{> share }}
					<!--- Comment sections - using DISQUS as default --->
				{{> comment }}
				</article>
					
				{{/post}}	
			</div>
		</main>
		<footer>
			{{> footer}}
		</footer>
	</div>
</div>

