<!--- TEMPLATE FOR INDEX PAGE --->
{{!< default}}

<div class="container">
	
	<!-- HEADER COLUMN --->	
	<div class="header-col">
		<header>
			{{> header }}	
		</header>
	</div>
	
	<!--- MAIN COLUMN --->
	<div class="main-col">
		{{#foreach posts}}
		<div class="post-entry post-list">
			<article role="article" itemscope itemtype="http://schema.org/Article">
				<div class="post-main">
					<a href="{{url}}" class="post-list-link">
						<div>
							<h2>{{title}}</h2>
							<br>
							<p>{{excerpt characters="180"}}... </p>
							<span class="readmore">
								<i class="fa fa-plus-square plus-sign"></i>
								<span class="readmore-hover">Sigue leyendo...</span>
							</span>
						</div>
					</a>
				</div>
			</article>
		</div>
		{{/foreach}}

		<div class="pagination">
			{{#if pagination}}{{{ pagination}}}{{/if}}
		</div>
		<footer>
			{{> footer}}
		</footer>
	</div>
</div>
